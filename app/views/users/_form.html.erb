<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_field :username, placeholder: "Enter a username", class: "form-control shadow rounded" %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label mt-4 text-dark" %>
          <div class="col-10">
            <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control mt-4 shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label mt-4 text-dark" %>
          <div class="col-10">
            <%= f.password_field :password, placeholder: "Choose a password", class: "form-control mt-4 shadow rounded" %>
          </div>
        </div>
      
        <div class="form-group text-center mt-4 mb-4">
          <%= f.submit "Sign up", class: "btn btn-outline-secondary btn-lg" %>
        </div>
      
      <% end %>
    </div>
    <%= link_to ' Cancel and Return to articles listing ', articles_path, class: "btn btn-outline-danger w-25 text-decoration-none" %>
  </div>
</div>