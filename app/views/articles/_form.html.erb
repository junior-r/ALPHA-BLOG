<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_field :title, placeholder: "Title of article", class: "form-control shadow rounded" %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label mt-4 text-dark" %>
          <div class="col-10">
            <%= f.text_area :description, placeholder: "Description of article", rows: 10, class: "form-control mt-4 shadow rounded" %>
          </div>
        </div>
      
        <div class="form-group text-center mt-4 mb-4">
          <%= f.submit class: "btn btn-outline-secondary btn-lg" %>
        </div>
      
      <% end %>
    </div>
    <%= link_to ' Cancel and Return to articles listing ', articles_path, class: "btn btn-outline-danger w-25 text-decoration-none" %>
  </div>
</div>